                  <div class="minus-icon absolute w-embed"><svg width="6" height="3" viewBox="0 0 6 3" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M0.464828 2.72C0.347495 2.72 0.246161 2.68267 0.160828 2.608C0.0861615 2.52267 0.0488281 2.42133 0.0488281 2.304V0.415999C0.0488281 0.298666 0.0861615 0.202667 0.160828 0.128C0.246161 0.0426668 0.347495 0 0.464828 0H5.58483C5.70216 0 5.79816 0.0426668 5.87283 0.128C5.95816 0.202667 6.00083 0.298666 6.00083 0.415999V2.304C6.00083 2.42133 5.95816 2.52267 5.87283 2.608C5.79816 2.68267 5.70216 2.72 5.58483 2.72H0.464828Z" fill="#223453"></path>
                    </svg></div>
                </div>
                <div class="product-accordion-icon new"></div>
              </div>
              <div class="product-accordion-info-container">
                <div class="product-accordion-content">
                  <p class="accordion-benefit-uitleg">{{ block.settings.paragraph | newline_to_br }}</p>
                </div>
              </div>
            </div>{%- endif -%}{%- endfor -%}
          </div>
          <div class="benefit-cta">
            <a href="{{ section.settings.link }}" target="_blank" class="actions">
              <div class="button">{{ section.settings.button_text }}</div>
            </a>
          </div>
        </div>
      </div>
    </div>
    <div class="wave bg-color"></div>
  

<script>var currentSection = document.currentScript.closest('.shopify-section');currentSection.setAttribute("class","benefits-section");</script>
        
{% schema %}
{
  "name": "V1 - Benefits",
  "tag": "div",
  "class": "benefits-section",
  "settings": [
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "SHOP DE COLLECTIE"
    },
    {
      "type": "textarea",
      "id": "title",
      "label": "Title",
      "default": "Dit waren niet alle voordelen van #NBFM."
    },
    {
      "type": "textarea",
      "id": "paragraph",
      "label": "Paragraph",
      "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse varius enim in eros elementum tristique. "
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    }
  ],
  "blocks": [
    {
      "name": "Benefit",
      "type": "benefit",
      "settings": [
        {
          "type": "textarea",
          "id": "title",
          "label": "Title",
          "default": "⭐️ Veilig in gebruik"
        },
        {
          "type": "textarea",
          "id": "paragraph",
          "label": "Paragraph",
          "default": "Highlight Unique Selling Propositions with a short summary of the key feature and how it benefits customers."
        }
      ]
    }
  ]
}
{% endschema %}