
    <div class="page-padding">
      <div class="benefit-grid mobile">
        <div class="benefits-wrapper f2wf-columns">
          <div class="benefit-img">{%- if section.settings.image == nil -%}<img class="absolute-img no-hover" src="{{ 'image-1.png' | asset_url }}" width="595" height="640" alt="" sizes="(max-width: 479px) 82vw, (max-width: 767px) 75vw, (max-width: 991px) 74vw, (max-width: 1439px) 44vw, 601px" loading="lazy" srcset="{{ 'image-1-p-500.png' | asset_url }} 500w, {{ 'image-1-p-800.png' | asset_url }} 800w, {{ 'image-1-p-1080.png' | asset_url }} 1080w, {{ 'image-1.png' | asset_url }} 1190w">{%- else -%}<img class="absolute-img no-hover" src="{{ section.settings.image.src | img_url: 'master' }}" width="595" height="640" alt="{{ section.settings.image.alt | escape }}" loading="lazy" srcset="{{ section.settings.image | img_url: '1920x' }} 1920w,{{ section.settings.image | img_url: '1600x' }} 1600w,{{ section.settings.image | img_url: '1366x' }} 1366w,{{ section.settings.image | img_url: '1024x' }} 1024w,{{ section.settings.image | img_url: '768x' }} 768w,{{ section.settings.image | img_url: '640x' }} 640w">{%- endif -%}</div>
        </div>
        <div class="benefit-content-wrapper">
          <div class="benefit-content">
            <div class="benefits-title">{{ section.settings.title | newline_to_br }}</div>
            <div class="benefits-paragraph">{{ section.settings.paragraph | newline_to_br }}</div>
          </div>
          <div class="product-accordion-list">
            {%- for block in section.blocks -%}{%- if block.type == "benefit" -%}<div data-click="accordion" class="product-accordion-item" block.shopify_attributes>
              <div class="product-accordion">
                <div class="accordion-title">{{ block.settings.title | newline_to_br }}</div>
                <div class="benefit-accordion-icon">
                  <div class="plus-icon absolute w-embed"><svg width="9" height="9" viewBox="0 0 9 9" fill="none" xmlns="http://www.w3.org/2000/svg">
