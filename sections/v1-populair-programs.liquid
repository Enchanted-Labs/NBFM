
    <div class="page-padding">
      <div class="container-v2">
        <div class="populair-programs-heading">
          <div class="tab-tagline header">
            <div class="text-12">{{ section.settings.tagline | newline_to_br }}</div>
          </div>
          <h1 class="page-h1 section">{{ section.settings.title | newline_to_br }}</h1>
          <div class="page-paragraph programs">{{ section.settings.paragraph | newline_to_br }}</div>
        </div>
        <div id="programs-swiper" class="swiper-container swiper-container-initialized swiper-container-horizontal swiper-container-pointer-events">
          <div class="bestsellers-swiper swiper-wrapper">
            {%- for block in section.blocks -%}{%- if block.type == "program" -%}<div class="swiper-slide" block.shopify_attributes>
              <div class="blog-swipe-content">
                <div class="programs-img-wrapper">{%- if block.settings.image == nil -%}<img src="{{ 'frame-17815.png' | asset_url }}" loading="lazy" sizes="(max-width: 479px) 92vw, (max-width: 767px) 95vw, (max-width: 991px) 91vw, 756.2421875px" srcset="{{ 'frame-17815-p-500.png' | asset_url }} 500w, {{ 'frame-17815-p-800.png' | asset_url }} 800w, {{ 'frame-17815-p-1080.png' | asset_url }} 1080w, {{ 'frame-17815.png' | asset_url }} 1190w" alt="" class="absolute-img no-hover">{%- else -%}<img src="{{ block.settings.image.src | img_url: 'master' }}" loading="lazy" alt="{{ block.settings.image.alt | escape }}" class="absolute-img no-hover" srcset="{{ block.settings.image | img_url: '1920x' }} 1920w,{{ block.settings.image | img_url: '1600x' }} 1600w,{{ block.settings.image | img_url: '1366x' }} 1366w,{{ block.settings.image | img_url: '1024x' }} 1024w,{{ block.settings.image | img_url: '768x' }} 768w,{{ block.settings.image | img_url: '640x' }} 640w">{%- endif -%}</div>
                <div class="programs-title">
                  <div class="blog-title">{{ 'tn52ea8608' | t }}</div>
                  <div class="programs-p">{{ 't41f0e3fd' | t }}</div>
                </div>
                <div class="programs-card-btn">{{ 'tn6f229fbc' | t }}</div>
              </div>
              <div class="product-card-label">{{ block.settings.label | newline_to_br }}</div>
            </div>{%- endif -%}{%- endfor -%}
          </div>
          <div class="swiper-drag-wrapper swiper-dragger-bestsellers">
            <div class="swiper-drag drag-bestsellers"></div>
          </div>
          <div class="slider-arrow-container blog">
            <div id="programs-prev-arrow" class="slider-arrow"><img src="{{ 'ic20-arrow-right_1.svg' | asset_url }}" loading="lazy" alt="" class="arrow-swipe"></div>
            <div id="programs-next-arrow" class="slider-arrow"><img src="{{ 'ic20-arrow-right.svg' | asset_url }}" loading="lazy" alt="" class="arrow-swipe"></div>
          </div>
        </div>
      </div>
    </div>
    <div class="wave programs"></div>
  

<script>var currentSection = document.currentScript.closest('.shopify-section');currentSection.setAttribute("class","programma-s-section");</script>
        
