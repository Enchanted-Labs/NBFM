{% schema %}
{
  "name": "V1 - Statistics",
  "tag": "div",
  "class": "statistics-section",
  "settings": [
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "SHOP BESTSELLERS"
    },
    {
      "type": "textarea",
      "id": "titel",
      "label": "Titel",
      "default": "Hier iets over de statistieken"
    },
    {
      "type": "textarea",
      "id": "tagline",
      "label": "Tagline",
      "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse varius enim in eros elementum tristique."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "url",
      "id": "statistics_button",
      "label": "Statistics Button"
    },
    {
      "type": "checkbox",
      "id": "subtitel_weergeven",
      "label": "Subtitel weergeven",
      "default": true
    }
  ],
  "blocks": [
    {
      "name": "Statistic",
      "type": "statistic",
      "settings": [
        {
          "type": "text",
          "id": "numbers",
          "label": "Numbers",
          "default": "10254+"
        },
        {
          "type": "textarea",
          "id": "information",
          "label": "Information",
          "default": "Merkte dat ze na 3 maanden effect zagen"
        }
      ]
    }
  ]
}
{% endschema %}