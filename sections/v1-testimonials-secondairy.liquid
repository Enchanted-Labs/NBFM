
    <div class="page-padding">
      <div class="container-v2">
        <div class="section-heading">
          <div class="testimonial-h1">{{ section.settings.title | newline_to_br }}</div>
          <div class="tagline">{{ section.settings.paragraph | newline_to_br }}</div>
        </div>
        <div id="testimonials-swiper" class="swiper-container swiper-container-initialized swiper-container-horizontal swiper-container-pointer-events">
          <div class="testimonial-swiper swiper-wrapper">
            {%- for block in section.blocks -%}{%- if block.type == "bestseller" -%}<div class="swiper-slide testimonial-swipe" block.shopify_attributes>
              <div class="review-swipe-content">
                <div class="stars-verifified">{%- if block.settings.stars == nil -%}<img src="{{ 'stars.svg' | asset_url }}" loading="lazy" alt="" class="stars-img">{%- else -%}<img src="{{ block.settings.stars.src | img_url: 'master' }}" loading="lazy" alt="{{ block.settings.stars.alt | escape }}" class="stars-img" srcset="{{ block.settings.stars | img_url: '1920x' }} 1920w,{{ block.settings.stars | img_url: '1600x' }} 1600w,{{ block.settings.stars | img_url: '1366x' }} 1366w,{{ block.settings.stars | img_url: '1024x' }} 1024w,{{ block.settings.stars | img_url: '768x' }} 768w,{{ block.settings.stars | img_url: '640x' }} 640w">{%- endif -%}
                  <div class="verified-container">
                    <div class="verified-icon w-embed">{{ block.settings.geverifieerd_icon }}</div>
                    <div class="verified-text">{{ block.settings.verification_status }}</div>
                  </div>
                </div>
                <div>{{ block.settings.review | newline_to_br }}</div>
                <div class="review-information">
                  <div class="review-name">{{ block.settings.naam }}</div>
                  <div class="review-info-divider"></div>
                  <div>{{ block.settings.wanneer_geschreven | newline_to_br }}</div>
                </div>
              </div>
            </div>{%- endif -%}{%- endfor -%}
          </div>
          <div class="swiper-drag-wrapper swiper-dragger-testimonials">
            <div class="swiper-drag drag-testimonials"></div>
          </div>
          <div class="slider-arrow-container">
            <div id="testimonials-prev-arrow" class="slider-arrow"><img src="{{ 'ic20-arrow-right_1.svg' | asset_url }}" loading="lazy" alt="" class="arrow-swipe"></div>
            <div id="testimonials-next-arrow" class="slider-arrow"><img src="{{ 'ic20-arrow-right.svg' | asset_url }}" loading="lazy" alt="" class="arrow-swipe"></div>
          </div>
        </div>
      </div>
    </div>
  

<script>var currentSection = document.currentScript.closest('.shopify-section');currentSection.setAttribute("class","testimonial-section programs");</script>
        
